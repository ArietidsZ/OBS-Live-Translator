#!/bin/bash
# Pre-commit hook for OBS Live Translator
# Runs formatting and linting checks before allowing commit

set -e

echo "ğŸ” Running pre-commit checks..."

# Check if cargo is available
if ! command -v cargo &> /dev/null; then
    echo "âŒ cargo not found. Please install Rust toolchain."
    exit 1
fi

# Run cargo fmt check
echo "ğŸ“ Checking code formatting..."
if ! cargo fmt --all -- --check; then
    echo "âŒ Code formatting check failed!"
    echo "ğŸ’¡ Run 'cargo fmt' to fix formatting issues."
    exit 1
fi

# Run cargo clippy
echo "ğŸ” Running clippy linter..."
if ! cargo clippy --all-features --all-targets -- -D warnings; then
    echo "âŒ Clippy found issues!"
    echo "ğŸ’¡ Fix the issues above before committing."
    exit 1
fi

# Optional: Run quick tests (commented for speed)
# echo "ğŸ§ª Running tests..."
# if ! cargo test --lib; then
#     echo "âŒ Tests failed!"
#     exit 1
# fi

echo "âœ… All pre-commit checks passed!"
exit 0
